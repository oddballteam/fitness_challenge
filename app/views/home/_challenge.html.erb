<div id="challenge-<%= challenge.id %>" class="max-w-sm w-auto lg:max-w-full lg:flex">
  <div class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden bg-no-repeat bg-center bg-oddball-lighter" style="background-image: url(<%= image_path('trophy.svg') %>
); background-size: 60% auto;" title="Trophy">
  </div>
  <div class="border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
    <div class="mb-8">
      <div class="text-sm text-gray-600 flex items-center justify-end">
        <%= link_to edit_challenge_path(challenge), class: "mr-5 flex items-center" do %>
          <svg class="fill-current text-gray-500 w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M402.6 83.2l90.2 90.2c3.8 3.8 3.8 10 0 13.8L274.4 405.6l-92.8 10.3c-12.4 1.4-22.9-9.1-21.5-21.5l10.3-92.8L388.8 83.2c3.8-3.8 10-3.8 13.8 0zm162-22.9l-48.8-48.8c-15.2-15.2-39.9-15.2-55.2 0l-35.4 35.4c-3.8 3.8-3.8 10 0 13.8l90.2 90.2c3.8 3.8 10 3.8 13.8 0l35.4-35.4c15.2-15.3 15.2-40 0-55.2zM384 346.2V448H64V128h229.8c3.2 0 6.2-1.3 8.5-3.5l40-40c7.6-7.6 2.2-20.5-8.5-20.5H48C21.5 64 0 85.5 0 112v352c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48V306.2c0-10.7-12.9-16-20.5-8.5l-40 40c-2.2 2.3-3.5 5.3-3.5 8.5z"></path></svg>
          Edit
        <% end %>

        <%= link_to challenge_path(challenge), method: :delete, class: "flex items-center text-red-400", data: { confirm: 'Are you sure you want to delete this challenge?' } do %>
          <svg class="fill-current text-red-400 w-3 h-3 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16zM53.2 467a48 48 0 0 0 47.9 45h245.8a48 48 0 0 0 47.9-45L416 128H32z"></path></svg>
          Delete
        <% end %>
      </div>
      <div class="text-gray-900 font-bold text-xl">
        <%= link_to "#{challenge.name}", challenge, class: "hover:underline cursor-pointer" %>
      </div>
      <p class="text-gray-600 mb-2">
        <%= challenge.start_date.strftime("%B %d, %Y") %> - <%= challenge.end_date.strftime("%B %d, %Y") %>
      </p>
      <p class="text-gray-700 text-base">
        <%= challenge.description %>
      </p>
    </div>
    <div class="flex items-center">
      <img class="w-10 h-10 rounded-full mr-4" src="https://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(challenge.user.email) %>?s=40" alt="Trophy">
      <div class="text-sm">
        <p class="text-gray-900 leading-none"><%= challenge.user.email %></p>
      </div>
    </div>
  </div>
</div>
