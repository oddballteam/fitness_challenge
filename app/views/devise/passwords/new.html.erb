<div class="w-full max-w-s">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
    <div class="mb-4">
      <h2 class="text-2xl">Forgot Your Password?</h2>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="mb-4 flex items-center justify-center">
      <%= f.submit "Send password reset instructions", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
    <div class="mt-10 flex items-center justify-around">
      <%= link_to "Log In", new_user_session_path(), class: "inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800" %>

      <%= link_to "Sign up", new_user_registration_path(), class: "inline-block align-baseline font-bold text-sm text-gray-500 hover:text-gray-800" %>
    </div>
  <% end %>
  <p class="mt-10 text-center text-gray-500 text-xs">
    &copy;2020 Oddball, Inc. All rights reserved.
  </p>
</div>
